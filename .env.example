# =======================
# AZURE POSTGRESQL CONFIG
# =======================
POSTGRES_HOST=SEU_SERVIDOR.postgres.database.azure.com
POSTGRES_PORT=5432
POSTGRES_DB=b3_data
POSTGRES_USER=seu_usuario@SEU_SERVIDOR
POSTGRES_PASSWORD=SENHA
POSTGRES_SSL_MODE=require

# ======================
# AZURE BLOB STORAGE
# ======================
AZURE_STORAGE_CONNECTION_STRING=DefaultEndpointsProtocol=https;AccountName=SEUCONTA;AccountKey=CHAVEZONA;EndpointSuffix=core.windows.net
AZURE_BLOB_CONTAINER=dados-pregao

# ==========================
# AZURE FUNCTION APP CONFIG
# ==========================
FUNCTIONS_WORKER_RUNTIME=python
AzureWebJobsStorage=DefaultEndpointsProtocol=https;AccountName=SEUCONTA;AccountKey=CHAVEZONA;EndpointSuffix=core.windows.net

# ====================
# API / BACKEND CONFIG
# ====================
API_HOST=0.0.0.0
API_PORT=8000
CORS_ORIGINS=https://seu-frontend.azurestaticapps.net

# =========================
# PIPELINE & ETL PARAMETERS
# =========================
EXPORT_JSON=false
UPLOAD_TO_BLOB=true
DOWNLOAD_SCHEDULE="0 0 19 * * *"   # Horário para baixar os arquivos da B3 (pode ajustar)

# ========================================
# COMO USAR ESTE ARQUIVO:
# 1. Copie para .env e edite os valores.
# 2. Preencha usando dados do Azure Portal:
#    - Banco: PostgreSQL > Visão geral > Nome do servidor, usuário, etc.
#    - Storage: Storage Account > Access keys.
#    - Container: Storage Account > Containers > nome do container.
#    - Functions: Function App > Configuration.
# 3. NÃO COMMITAR ESTE ARQUIVO (.env) NO GIT!
# ========================================
